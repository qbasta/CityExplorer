@model CityExplorer.Models.Landmark
@{
    
}

<h1>Edycja</h1>

<h4>Zabytki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
            <h2 class="pb-10">Zaktualizuj zabytek</h2>
            <input type="hidden" class="input" asp-for="Id">
            <input type="hidden" class="input" asp-for="ImageFile">

            <div class="input-container">
                <label asp-for="Name" class="w-40">Nazwa</label>
                <input type="text" class="input" asp-for="Name">
            </div>
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="Name"> </span>
            </div>

            <div class="input-container">
                <label asp-for="ImageFile" class="w-40">Zdjęcie</label>
                <input type="file" asp-for="ImageFile">
            </div>
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="ImageFile"> </span>
            </div>

            <div class="input-container">
                <label asp-for="Categories" class="w-40">Genre</label>
                <select asp-items="Model.MultiCategoryList" class="input" asp-for="CategoryList" multiple>
                    <option value="">--Wybierz--</option>
                </select>
            </div>
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="Categories"> </span>
            </div>

            <div class="input-container">
                <label asp-for="TourDuration" class="w-40">Czas zwiedzania</label>
                <input type="text" class="input" asp-for="TourDuration">
            </div>
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="TourDuration"> </span>
            </div>

            <div class="input-container">
                <label asp-for="Description" class="w-40">Opis</label>
                <input type="text" class="input" asp-for="Description">
            </div>
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="Description"> </span>
            </div>

            <div class="input-container">
                <label asp-for="OpeningHours" class="w-40">Godziny otwarcia</label>
                <input type="text" class="input" asp-for="OpeningHours">
            </div>
            <div class="message-box pd-x-28 error">
                <span asp-validation-for="OpeningHours"> </span>
            </div>


            @if (TempData["msg"] != null)
            {
                <div class="alert mb-1">
                    @TempData["msg"]
                </div>
            }

            <div class="input-container">
                <button class="btn btn-default" type="submit">Save</button>
                <a class="btn btn-sec" href="/Landmark/LandmarkList">All records</a>
            </div>
        </form>
    </div>
</div>