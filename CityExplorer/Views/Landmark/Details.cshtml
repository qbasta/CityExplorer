<h4>Reviews</h4>
<button id="showReviews">Pokaż recenzje</button>
<button id="showAdvice">Pokaż porady</button>
<button id="showAll">Pokaż wszystkie</button>
@foreach (var review in Model.Reviews)
{
    <div class="review" data-tag="@review.Tag">
        @if (review.AppUser != null)
        {
            <strong>@review.AppUser.FirstName @review.AppUser.LastName</strong>
        }
        else
        {
            <strong>Unknown User</strong>
        }
        @if (review.Tag == "recenzja")
        {
            <p>Rating: @review.Rating</p>
        }
        <p>Date: @review.Date.ToString("dd-MM-yyyy HH:mm")</p>
        <p>@review.Text</p>
        <p>Tag: @review.Tag</p>

        @if ((await AuthorizationService.AuthorizeAsync(User, review.Id, "CanDeleteReview")).Succeeded)
        {
            <form asp-action="DeleteReview" method="post">
                <input type="hidden" name="Id" value="@review.Id" />
                <input type="hidden" name="LandmarkId" value="@Model.Id" />
                <button type="submit">Delete Review</button>
            </form>
        }
    </div>
}
<script>
    document.getElementById('showReviews').addEventListener('click', function () {
        var reviews = document.getElementsByClassName('review');
        for (var i = 0; i < reviews.length; i++) {
            if (reviews[i].getAttribute('data-tag') == 'recenzja') {
                reviews[i].style.display = 'block';
            } else {
                reviews[i].style.display = 'none';
            }
        }
    });

    document.getElementById('showAdvice').addEventListener('click', function () {
        var reviews = document.getElementsByClassName('review');
        for (var i = 0; i < reviews.length; i++) {
            if (reviews[i].getAttribute('data-tag') == 'porada') {
                reviews[i].style.display = 'block';
            } else {
                reviews[i].style.display = 'none';
            }
        }
    });

    document.getElementById('showAll').addEventListener('click', function () {
        var reviews = document.getElementsByClassName('review');
        for (var i = 0; i < reviews.length; i++) {
            reviews[i].style.display = 'block';
        }
    });
</script>